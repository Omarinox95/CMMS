<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;" >
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                   
                                    <img src="images/icon/logo-mini.png" alt="Cool Admin" /> <strong>MMS</strong></a>        
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action="/equipment/add" method="POST">
                                            <input type="text"  hidden  name="Image" value="{{equipment.Image}}" >
                                            <input type="text"  hidden  name="edit" value="edit" >
                                            <input type="text"  hidden  name="Code" value="{{ equipment.Code }}" >
                                            <div class="form-group">
                                                <label class=" form-control-label">Nombre</label>
                                                <input type="text"required name="Name" placeholder="Ingrese Nombre" value="{{ equipment.Name }}" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Costo</label>
                                                <input type="number"required name="Cost" placeholder="Ingrese Costo" value="{{ equipment.Cost }}" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Fecha de Instalación</label>
                                                <input type="date" required name="InstallationDate" placeholder="Ingrese Fecha de Instalación" value="{{ equipment.InstallationDate }}" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Fecha de Funcionamiento</label>
                                                <input type="date" required name="ArrivalDate" placeholder="Enter Arrival Date"  value="{{ equipment.ArrivalDate }}"  class="form-control">
                                            </div>
                                             <div class="form-group">
                                                <label class=" form-control-label">Tiempo de Garantía</label>
                                                <input type="date" required name="WarrantyDate" placeholder="Enter Warranty Date"   value="{{ equipment.WarrantyDate }}"  class="form-control">
                                             </div>
                                             <div class="form-group">
                                                <label class=" form-control-label">Modelo</label>
                                                <input type="text" required name="Model" value="{{ equipment.Model}}" placeholder="Enter Model Number" class="form-control">
                                             </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Número de Serie</label>
                                                <input type="text"required name="SerialNumber" value="{{ equipment.SerialNumber }}" placeholder="Enter Serial Number" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Fabricación</label>
                                                <input type="text" required name="Manufacturer" value="{{ equipment.Manufacturer }}" placeholder="Enter Manufacturer" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Localización</label>
                                                <input type="text" required name="Location" value="{{ equipment.Location }}" placeholder="Enter Location" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Código Proveedor</label>
                                                <input type="text" required name="Agent" placeholder="Enter Agent Code" value="{{ equipment.AgentSupplierId }}" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Departamento</label>
                                                <select name="Department"required id="select" class="form-control">
                                                        <option value="OR" {{#if equipment.OR}} selected {{/if}} >OR</option>
                                                        <option value="Radiology" {{#if equipment.Radiology}} selected {{/if}}>Radiology</option> 
                                                        <option value="ICU" {{#if equipment.ICU}} selected {{/if}}>ICU</option>
                                                        <option value="CSSD" {{#if equipment.CSSD}} selected {{/if}}>CSSD</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">MP</label>
                                                <select name="PM"required id="select" class="form-control">
                                                        <option value="Semestral" {{#if M}} selected {{/if}} >Semestral</option>
                                                        <option value="Anual" {{#if A}} selected {{/if}}>Anual</option> 
                                                        <option value="Trimestral" {{#if A}} selected {{/if}}>Trimestral</option> 

                                                </select>
                                            </div>     
                                            <div class="form-group">
                                                <label class=" form-control-label">Notas</label>
                                                <input type="text"  name="Notes" placeholder="Any Notes" value="{{ equipment.Notes}}" class="form-control">
                                            </div>                                       
                                                            
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Añadir</button>
                                
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>

        </div>
    </div>        
</div>edit/:id