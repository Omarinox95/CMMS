<head>
    <style>
        /* Fondo de thead */
        table thead {
            background-color: #d2d6d9 !important; /* Fondo gris claro */
        }

        /* Letras de los th */
        table thead th {
            color: #009f48 !important; /* Letras verdes */
        }

        /* Letras de los td */
        table tbody td {
            color: #303655 !important; /* Letras gris oscuro */
        }
    </style>
</head>

<div class="main-content">
    <div class="section__content section__content--p30"> 
        <div class="container-fluid">
            <div class="table-responsive m-b-40">
                <table class="table table-borderless table-data3">
                    <thead>
                        <tr>
                            <th>Código Equipo</th>
                            <th>Nombre equipo</th>
                            <th>Fecha instalación</th>
                            <th></th>

                        </tr>
                    </thead>
                   {{#if hasReports}} 
                    <tbody>
                     {{#each reports}}
                        <tr>
                            <td>{{this.Code}}</td>
                            <td>{{this.Name}}</td>
                            <td>{{this.InstallationDate}}</td>
                            <td>
                                <div class="table-data-feature">      
                                    <a href="/report/equipment/installation/{{ this.Code }}?report=true" class="item" data-toggle="tooltip" data-placement="top" title="Detalles">
                                        <i class="zmdi zmdi-more"></i>
                                    </a>
                                </div>
                            </td>

                        </tr>
                       {{/each}} 
                    </tbody>
                   {{/if}} 
                </table>
            </div>
        </div>
    </div>
</div>
        <!-- END PAGE CONTAINER-->  

