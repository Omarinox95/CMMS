<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reporte de Repuestos</title>
    <style>
        /* Fondo de thead */
        table thead {
            background-color: #d2d6d9 !important; /* Fondo gris claro */
        }

        /* Letras de los th */
        table thead th {
            color: #009f48 !important; /* Letras verdes */
        }

        /* Letras de los td */
        table tbody td {
            color: #303655 !important; /* Letras gris oscuro */
        }

        /* Estilos para impresión */
        @media print {
            body {
                visibility: hidden;
            }
            .print-area {
                visibility: visible;
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
            }
            button {
                display: none; /* Ocultar botones al imprimir */
            }
        }
    </style>
</head>
<body>

<div class="main-content">
    <div class="section__content section__content--p30"> 
        <div class="container-fluid">
            <div class="table-data__tool">
                <h2>
                    <img src="images/{{equipment.Image}}" style="height: 50px; width:50px; border-radius: 50%;">
                    {{#if equipment.Name}} Equipment Name: {{ equipment.Name }} , Model: {{ equipment.Model}}{{/if}}
                </h2>
                <!-- Botón para imprimir -->
                <button onclick="printReport()" style="background-color: #009f48; color: white; padding: 10px 20px; border-radius: 5px;"> 
                    Imprimir Reporte
                </button>
            </div>

            <div class="table-responsive m-b-40 print-area">
                <table class="table table-borderless table-data3">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Cantidad</th>
                        </tr>
                    </thead>
                    {{#if hasSpareParts}} 
                    <tbody>
                        {{#each spareParts}}
                        <tr>
                            <td>{{this.Code}}</td>
                            <td>{{this.Name}}</td>
                            <td>{{this.Amount}}</td>
                        </tr>
                        {{/each}} 
                    </tbody>
                    {{else}}
                    <tr>
                        <td colspan="3">No hay repuestos disponibles para este equipo.</td>
                    </tr>
                    {{/if}} 
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Script al final para evitar errores -->
<script>
    function printReport() {
        console.log("Intentando imprimir...");
        window.print();
    }
</script>

</body>
</html>
