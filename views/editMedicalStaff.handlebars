<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;">
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                    <img src="/images/LogoMedical.png" alt="Logo Médico" />     
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action="/medicalStaff/add" method="POST">
                                        
                                        <!-- ID oculto -->
                                        <input type="hidden" name="DSSN" value="{{medicalStaff.DSSN}}">

                                        <div class="form-group">
                                            <label class="form-control-label">Nombres</label>
                                            <input type="text" required name="FName" placeholder="Nombres" value="{{medicalStaff.FName}}" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Apellidos</label>
                                            <input type="text" required name="LName" placeholder="Apellidos" value="{{medicalStaff.LName}}" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Email</label>
                                            <input type="email" required name="Email" placeholder="Email" value="{{medicalStaff.Email}}" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Contraseña (opcional)</label>
                                            <input type="password" name="Password" placeholder="Dejar vacío para no cambiar" class="form-control" autocomplete="new-password">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Rol</label>
                                            <select name="role" class="form-control" required>
                                                <option value="medicalStaff" {{#ifEquals medicalStaff.role "medicalStaff"}}selected{{/ifEquals}}>Médico Clínico</option>
                                                <option value="admin" {{#ifEquals medicalStaff.role "admin"}}selected{{/ifEquals}}>Administrador</option>
                                                <option value="technician" {{#ifEquals medicalStaff.role "technician"}}selected{{/ifEquals}}>Técnico</option>
                                            </select>
                                        </div>

                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Guardar Cambios</button>
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>
        </div>
    </div>        
</div>
