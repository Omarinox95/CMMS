<div class="main-content"> 
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="page-wrapper">
        <div class="page-content--bge5">
          <div class="container">
            <div class="login-wrap">
              <div class="login-content">
                <div class="login-logo">
                  <img src="/images/LogoMedical.png" alt="Logo" />       
                </div>
                <div class="login-form">
                  <form action="/stoporder/edit/{{stoporder.id}}" method="POST">
                    <div class="form-group">
                        <label>ID</label>
                        <input type="text" value="{{stoporder.id}}" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label>Descripción</label>
                        <input type="text" name="description" value="{{stoporder.description}}" required class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label>Ponderación</label>
                        <input type="number" name="punctuation" value="{{stoporder.punctuation}}" required class="form-control" min="0">
                    </div>
                    <button type="submit" class="au-btn au-btn--block au-btn--green m-b-20">Actualizar</button>
                </form>

                </div>
              </div>
            </div>
          </div>
        </div>
       </div>
     </div>
  </div>        
</div>
