<style>
.tarjeta {
  width: 300px;
  height: 200px;
  background-color: #009f48; /* Color de fondo del contenedor */
}
</style>

<div class="container mt-5">
  <div class="row">
    <!-- Tarjeta de cantidad de equipos -->
    <div class="col-md-4">
      <div class="tarjeta text-white mb-3">
        <div class="card-header">Cantidad total de equipos</div>
        <div class="card-body">
          <h5 class="card-title">{{totalEquipos}}</h5>
        </div>
      </div>
    </div>

    <!-- Tarjeta de costo total -->
    <div class="col-md-4">
      <div class="card text-white bg-success mb-3">
        <div class="card-header">Costo total</div>
        <div class="card-body">
          <h5 class="card-title">${{costoTotal}}</h5>
        </div>
      </div>
    </div>

    <!-- Tarjeta con distribución por año -->
    <div class="col-md-4">
      <div class="card text-white bg-info mb-3">
        <div class="card-header">Costo total por año</div>
        <div class="card-body">
          {{#each costosPorAnio}}
            <p><strong>{{this.anio}}:</strong> ${{this.total}}</p>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
