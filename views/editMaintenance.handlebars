                                            <label class=" form-control-label">Fecha Inicio</label>
                                            <input type="date" required name="StartDate" placeholder="Enter New Start Date " value="{{maintenance.StartDate}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Fecha final</label>
                                            <input type="date" required name="EndDate" placeholder="Enter New End Date  " value="{{maintenance.EndDate}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Descripción</label>
                                            <input type="text" required name="Description" placeholder="Enter New Description " value="{{maintenance.Description}}" class="form-control">
