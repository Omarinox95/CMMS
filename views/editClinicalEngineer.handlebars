<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;" >
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                
                                    <img src="images/LogoMedical.png" />     
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action="/clinicalEngineer/add" method="POST" enctype="multipart/form-data">
                                        <input type="text" hidden required name="DSSN"  placeholder="New First name" value="{{ clinicalEngineer.DSSN}}" class="form-control">
                                            <input type="text"  hidden  name="Image" value="{{ clinicalEngineer.Image }}" >
                                            <input type="text"  hidden  name="edit" value="edit" >
                                        <div class="form-group">
                                            <label class=" form-control-label">Nombres</label>
                                            <input type="text" required name="FName"  placeholder="New First name" value="{{ clinicalEngineer.FName}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Apellidos</label>
                                            <input type="text" required name="LName" placeholder="New Last name" value="{{ clinicalEngineer.LName}}" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label class=" form-control-label">Celular</label>
                                            <input type="text" required name="Phone" placeholder="New Phone"  value="{{ clinicalEngineer.Phone}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Edad</label>
                                            <input type="text"  required name="Age" placeholder="New Age" value="{{ clinicalEngineer.Age}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Email</label>
                                            <input type="email" required name="Email" placeholder="New Email" value="{{ clinicalEngineer.Email}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Dirección</label>
                                            <input type="text" required name="Address" placeholder="New Address" value="{{ clinicalEngineer.Adress}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Horas de Trabajo</label>
                                            <input type="text" required name="workHours" placeholder="New Work Hours" value="{{ clinicalEngineer.WorkHours}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Departamento</label>
                                            <select name="Department"required id="select"   class="form-control" >
                                                <option value="Radiology" {{#if clinicalEngineer.Radiology}} selected {{/if}}>Radiology</option>
                                                <option value="OR" {{#if clinicalEngineer.OR}} selected {{/if}}>OR</option>
                                                <option value="ICU" {{#if clinicalEngineer.ICU}} selected {{/if}}>ICU</option>
                                                <option value="CSSD" {{#if clinicalEngineer.CSSD}} selected {{/if}}>CSSD</option>
                                            </select>
                                        </div> 
                                        <div class="form-group">
                                            <label class="form-control-label">Rol</label>
                                            <select name="role" class="form-control" required>
                                                <option value="clinicalEngineer" {{#ifEquals clinicalEngineer.role "clinicalEngineer"}}selected{{/ifEquals}}>Ingeniero Clínico</option>
                                                <option value="admin" {{#ifEquals clinicalEngineer.role "admin"}}selected{{/ifEquals}}>Administrador</option>
                                            </select>
                                        </div>
                                       
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Añadir</button>
                                
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>

        </div>
    </div>        
</div>